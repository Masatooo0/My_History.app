<div class="container">
  <div class="row py-5 d-flex flex-column">
    <div class="col-11 col-md-8 col-lg-6 mx-auto mb-3 p-3 p-md-4 border border rounded-lg shadow bg-white">
      <div class="col text-center text-info"><h3>学歴情報</h3></div>
      <div class="col form-group pt-3">
        <%= form_with(model: @resume, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group text-center status-select mt-4">
            <%= f.select :status ,[['学歴',true],['職歴',false]] %>
          </div>
          <div class="form-group text-center">
            <%= f.date_select :period, { use_month_numbers: true,start_year: 1950, end_year: (Time.now.year), discard_day:true, default: Date.new(1998, 1, 1)},
             {class: 'select-form form-control d-inline-block w-auto shadow-sm rounded-pill bg-white'} %>
          </div>
          <div class="form-group">
            <%= f.text_field :content,class:'form-control', placeholder: "〇〇大学〇〇学部〇〇学科 入学" %>
          </div>
          <div class="col text-center">
            <%= f.submit '保存', class: 'btn btn-outline-info shadow-sm rounded-pill mt-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>