<div class="wrap-chart">
  <div class="motivation-chart-container" style="position: relative; height:60vh; width:90vw">
    <canvas id="MotivationChart"></canvas>
  </div>
</div>
<script>
  var ctx = document.getElementById("MotivationChart");
  var motivationChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: gon.period,
      datasets:
      [
        {
        label: 'モチベーション度',
        data: gon.motivation,
        backgroundColor: 'rgba(245,203,92,0.8)',
        borderColor: 'rgba(245,203,92,0.8)',
        }
      ]
    },
    options: {
      maintainAspectRatio: false,
      scale: {
        ticks: {
          suggestedMin: 0,
          suggestedMax: 100
        }
      }
    }
  });
</script>