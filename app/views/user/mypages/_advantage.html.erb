<% if @adcvantages.present? %>
  <ul class="advantage-list">
    <% @advantages.each do |advantage| %>
      <li>
        <%= advantage.advantage %>
        <i class="far fa-hand-point-right"></i>
        <%= link_to history_path(advantage.history) do %>
         <%= advantage.history.title %>
        <% end %>
        の経験により
      </li>
    <% end %>
  </ul>
  <div class="text-right pr-5">
    <%= link_to new_advantage_path do %>
      <i class="fa-3x far fa-plus-square"></i>
    <% end %>
  </div>
<% else %>
  <div class="container">
    <p>まだ強みが登録されていません</p>
    <p>登録してみましょう</p>
    <%= link_to "追加", new_advantage_path, class:"btn btn-success" %>
  </div>
<% end %>