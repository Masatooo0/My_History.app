<div class="container">
  <% if @dreams.present? %>
    <ul class="dream-list">
      <% dreams.each do |dream| %>
      <li class="dream-content">
        <div class="d-flex align-items-end">
          <div class="dream-title mr-auto"><%= dream.content %></div>
          <%= link_to edit_dream_path(dream.id), class: "mr-3" do %>
            <i class="far fa-edit fa-lg"></i>
          <% end %>
          <%= link_to dream_path(dream.id), method: :delete, data: {confirm: "本当に削除しますか？"} do %>
            <i class="far fa-trash-alt fa-lg"></i>
          <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="text-right pr-5">
      <%= link_to new_dream_path do %>
        <i class="fa-3x far fa-plus-square"></i>
      <% end %>
    </div>
  <% else %>
    <p>まだ人生の目的が登録されていません</p>
    <p>追加してみましょう</p>
    <%= link_to "追加", new_dream_path, class:"btn btn-primary ml-7" %>
  <% end %>
</div>